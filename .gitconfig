[user]
  name = Chris Dahms
  email = zentrification@gmail.com

[alias]
  alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
  ci = commit
  co = checkout
  coh = checkout HEAD
  com = checkout master
  cod = checkout development
  ls = ls-files
  st = status --short --branch
  # cleanup a commit
  fix = commit --amend -C HEAD
  review = log -p --max-count=1
  this = !git init && git add . && git commit -m \"initial commit\"
  graphviz = "!f() { echo 'digraph git {' ; git log --pretty='format:  %h -> { %p }' \"$@\" | sed 's/[0-9a-f][0-9a-f]*/\"&\"/g' ; echo '}'; }; f"
  #l = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  l = "!f () { git log --abbrev-commit --date=short --pretty=format:'%h%x00%cd%x00%s%x00%an%x00%d' $@ | gawk -F '\\0' '{ printf \"\\033[31m%s\\033[0m \\033[32m%s\\033[0m  %-80s \\033[30;1m%s\\033[0m\\033[33m%s\\n\", $1, $2, gensub(/(.{79}).{2,}/, \"\\\\1â€¦\",\"g\",$3), $4, $5 }' | less -R; }; f"
  # log all
  la = log --graph --date=short --all --pretty=format:\"%h %ad | %s%d [%an]\"
  # log graph
  lg = log --graph --abbrev-commit --date=relative --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  # log files
  lf = log --stat --abbrev-commit

[branch "master"]
  remote = origin
  merge = refs/heads/master

[core]
  filemode = true
  logallrefupdates = true
  whitespace = space-before-tab, trailing-space
  editor = /usr/bin/vim
  excludesfile = ~/.gitignore_global

[branch]
  autosetupmerge = true

[diff]
  renames = copies
  mnemonicprefix = true

[help]
  browser = open

[sendemail]
  smtpserver = smtp.gmail.com
  smtpserverport = 587
  smtpencryption = tls
  smtpuser = zentrification@gmail.com

[color]
  ui = auto

[color "diff"]
  meta = blue bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "branch"]
  current = yellow reverse
  local = yellow bold
  remote = green bold
  plain = red bold

[color "status"]
  added = yellow
  changed = green bold
  untracked = blue bold
